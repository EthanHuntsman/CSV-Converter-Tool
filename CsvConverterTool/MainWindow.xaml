<Window x:Class="CsvConverterTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSV Converter - v1.0" Height="600" Width="900"
        MinHeight="450" MinWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top controls -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Source CSV:" VerticalAlignment="Center"/>
                <TextBox Name="txtSourcePath" Margin="5,0" Width="450" IsReadOnly="True"/>
                <Button Name="btnBrowse" Content="Browse..." Width="90" Click="btnBrowse_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Delimiter:" VerticalAlignment="Center"/>
                <ComboBox Name="cmbDelimiter" Width="120" Margin="5,0">
                    <ComboBoxItem Content="Auto-Detect" IsSelected="True"/>
                    <ComboBoxItem Content="Comma (,)" Tag=","/>
                    <ComboBoxItem Content="Semicolon (;)" Tag=";"/>
                    <ComboBoxItem Content="Tab (\t)" Tag="\t"/>
                    <ComboBoxItem Content="Pipe (|)" Tag="|"/>
                </ComboBox>

                <TextBlock Text="Output Format:" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <ComboBox Name="cmbOutputFormat" Width="120" Margin="5,0">
                    <ComboBoxItem Content="CSV" IsSelected="True"/>
                    <ComboBoxItem Content="TSV"/>
                    <ComboBoxItem Content="JSON"/>
                </ComboBox>

                <TextBlock Text="Encoding:" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <ComboBox Name="cmbEncoding" Width="150" Margin="5,0">
                    <ComboBoxItem Content="UTF-8" IsSelected="True"/>
                    <ComboBoxItem Content="Shift-JIS"/>
                    <ComboBoxItem Content="Windows-1252"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Data grid -->
        <DataGrid Grid.Row="1" Name="dataGridPreview"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,0,0,10"/>

        <!-- Bottom controls -->
        <DockPanel Grid.Row="2">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Name="btnSelectColumns" Content="Select Columns..." Margin="0,0,10,0"
                        Click="btnSelectColumns_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Name="btnSaveAs" Content="Save Converted As..."
                        Width="160"
                        Click="btnSaveAs_Click"/>
            </StackPanel>

            <StatusBar DockPanel.Dock="Bottom" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock Name="txtStatus" Text="Ready"/>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
